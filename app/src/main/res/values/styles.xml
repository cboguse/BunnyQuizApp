<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">#7B1FA2</item>
        <item name="colorAccent">#FFC107</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FFC107</item>
    </style>

    <!-- Linear Layout Styling -->
    <style name="layoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Header Styling -->
    <style name="headerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">#7B1FA2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Subheader Styling -->
    <style name="subheaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFC107</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Question Text Styling -->
    <style name="questionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#7B1FA2</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/shapes</item>
    </style>

    <!-- Question Image Styling -->
    <style name="imageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Radio Button Group Vertical Styling (Default Styling) -->
    <style name="radioGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Radio Button Group Horizontal Styling -->
    <style name="radioGroupHorizStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Radio Button Vertical Styling (Default Styling) -->
    <style name="radioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Radio Button Horizontal Styling -->
    <style name="radioButtonHorizStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- EditText Input Text Styling -->
    <style name="inputTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFC107</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Linear Layout used to center Checkboxes -->
    <style name="linearlayoutCheckboxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Checkbox Styling inside Linear Layout -->
    <style name="checkboxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Calculate Score Button -->
    <style name="calcButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textColor">#7B1FA2</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Text at End of App -->
    <style name="endTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7B1FA2</item>
        <item name="android:background">@drawable/shapes</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
